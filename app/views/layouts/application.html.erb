<!DOCTYPE html>
<html>
<head>
	<title>Omrails</title>
	<%= stylesheet_link_tag    "application", :media =>
	"all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %></head>
<body>
	<header>
		<%= render "layouts/header" %></header>
	<div class="container">
		<% flash.each do |name,msg|  %>
			<%= content_tag :div, msg, class: "alert alert-#{name==:notice ? "success" : "danger"}" -%>
		<% end %>
		<%= yield %>
		<%= render "layouts/footer" %></div>
</body>
</html>